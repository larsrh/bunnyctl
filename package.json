{
    "name": "bunnyctl",
    "version": "0.0.2",
    "description": "CLI and TS/JS library for Bunny.net API operations",
    "type": "module",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "bin": {
        "bunnyctl": "lib/cli.js"
    },
    "scripts": {
        "lint": "eslint",
        "test": "c8 mocha",
        "update-nock": "cross-env BUNNYCTL_TEST_MODE=update mocha",
        "build": "tsc"
    },
    "author": "Lars Hupel",
    "license": "Apache-2.0",
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/chai": "^5.2.3",
        "@types/chai-as-promised": "^8.0.2",
        "@types/mocha": "^10.0.10",
        "@types/node": "^25.0.3",
        "c8": "^10.1.3",
        "chai": "^6.2.2",
        "chai-as-promised": "^8.0.2",
        "cross-env": "^10.1.0",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "fast-check": "^4.5.2",
        "mocha": "^11.7.5",
        "nock": "^14.0.10",
        "prettier": "3.7.4",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.1"
    },
    "dependencies": {
        "cmd-ts": "^0.14.3",
        "io-ts": "^2.2.22"
    },
    "prettier": {
        "trailingComma": "none",
        "arrowParens": "avoid"
    },
    "mocha": {
        "spec": "src/test/**/*.spec.ts",
        "require": "tsx"
    },
    "c8": {
        "exclude": [
            "src/test/**/*.ts"
        ]
    }
}
