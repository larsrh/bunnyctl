{
    "name": "bunnyctl",
    "version": "0.0.2",
    "description": "CLI and TS/JS library for Bunny.net API operations",
    "type": "module",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "bin": {
        "bunnyctl": "lib/cli.js"
    },
    "scripts": {
        "lint": "eslint",
        "test": "cross-env c8 mocha",
        "update-nock": "cross-env BUNNYCTL_TEST_MODE=update mocha",
        "build": "tsc"
    },
    "author": "Lars Hupel",
    "license": "Apache-2.0",
    "devDependencies": {
        "@eslint/js": "^9.12.0",
        "@types/chai": "^5.0.0",
        "@types/chai-as-promised": "^8.0.1",
        "@types/eslint__js": "^8.42.3",
        "@types/mocha": "^10.0.9",
        "@types/node": "^22.7.4",
        "@types/uuid": "^10.0.0",
        "c8": "^10.1.3",
        "chai": "^5.1.1",
        "chai-as-promised": "^8.0.1",
        "cross-env": "^7.0.3",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "fast-check": "^3.22.0",
        "mocha": "^10.7.3",
        "nock": "^14.0.0",
        "prettier": "3.3.3",
        "tsx": "^4.19.1",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.8.1"
    },
    "dependencies": {
        "cmd-ts": "^0.13.0",
        "io-ts": "^2.2.21"
    },
    "prettier": {
        "trailingComma": "none",
        "arrowParens": "avoid"
    },
    "mocha": {
        "spec": "src/test/**/*.spec.ts",
        "require": "tsx"
    },
    "c8": {
        "exclude": [
            "src/test/**/*.ts"
        ]
    }
}
